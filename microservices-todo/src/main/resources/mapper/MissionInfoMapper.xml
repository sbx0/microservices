<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sbx0.microservices.todo.mapper.MissionInfoMapper">
    <select id="pagingList" resultType="cn.sbx0.microservices.todo.entity.MissionInfoEntity">
        SELECT id,
        user_id,
        mission_name,
        mission_type,
        mission_date,
        repeat_type,
        mission_details,
        create_time,
        update_time
        FROM mission_info
        WHERE del_flag = 0
        <foreach item="item" index="index" collection="filters" open="AND " separator="AND"
                 nullable="false">
            ${item.field} = #{item.value}
        </foreach>
        <if test="keyword != null and keyword != ''">
            AND (
            mission_name LIKE concat('%', #{keyword,jdbcType=VARCHAR} ,'%')
            )
        </if>
        <foreach item="item" index="index" collection="orders" open="ORDER BY " separator=","
                 nullable="false">
            ${item.field} ${item.sort}
        </foreach>
    </select>
</mapper>
